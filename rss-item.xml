{% unless item.draft %}
<item>
  <title>{{item.title | xml_escape}}</title>
  <link>
    {% if item.url contains '://' %}
      {{item.url}}
    {% else %}
      {{ item.url | prepend: site.url }}
    {% endif %}
  </link>
  <description>{{item.excerpt | xml_escape}}...</description>
  <pubDate>{{item.date | date_to_xmlschema}}</pubDate>
  <dc:creator>{% if item.autor %}{{item.autor}}{% else %}{{site.title}}{% endif %}</dc:creator>
  <guid isPermaLink="true">
    {% if item.url contains '://' %}
      {{item.url}}
    {% else %}
      {{ item.url | prepend: site.url }}
    {% endif %}
  </guid>
</item>
{% endunless %}
